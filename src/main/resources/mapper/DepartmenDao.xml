<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hrnagemet.dao.DepartmenDao">


    <select id="getMaxDeptno" resultType="java.lang.Integer">
        SELECT COALESCE(MAX(deptno), 0) FROM dept
    </select>

    <insert id="insertDept" >
        INSERT INTO dept (deptno, dname, loc)
        VALUES (
                   #{deptno},
                   #{dname},
                   #{loc}
               )
    </insert>

    <select id="deparById" resultType="com.example.hrnagemet.entity.Departmen">
        SELECT deptno, dname, loc
        FROM dept
        WHERE deptno = #{deptno}
    </select>

</mapper>