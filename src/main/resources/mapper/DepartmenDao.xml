<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hrnagemet.dao.DepartmenDao">



    <insert id="insertDept">
        INSERT INTO dept (deptno, dname, loc)
        VALUES (
                   nextval('dept_id_seq'), #{dname},
                   #{loc}
               )
    </insert>

    <select id="deparById" resultType="com.example.hrnagemet.entity.Departmen">
        SELECT * FROM dept WHERE deptno = #{deptno}
    </select>

    <update id="updateEmployeeDept">
        UPDATE emp
        SET deptno = #{deptno}
        WHERE empno = #{empno}
    </update>

    <delete id="deleteByDeptno">
        DELETE FROM dept WHERE deptno = #{deptno}
    </delete>

    <update id="updateDept">
        UPDATE dept
        <set>
            <if test="dname != null and dname != ''">dname = #{dname},</if>
            <if test="loc != null and loc != ''">loc = #{loc}</if>
        </set>
        WHERE deptno = #{deptno}
    </update>


</mapper>